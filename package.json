    "react-masonry-component": "^5.0.3",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.0.4",
    "redux-form": "^6.5.0",
